{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./static/js",
    "rootDir": "./static/ts",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./static/ts/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
